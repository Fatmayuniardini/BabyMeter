<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BabyMeter" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryVariant">@color/pink</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/pinkmuda</item>
        <item name="colorSecondaryVariant">@color/pinkmuda</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/pink</item>
