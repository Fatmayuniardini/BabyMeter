<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BabyMeter" parent="Theme.Material3.DayNight.NoActionBar">
       <item name="color">@color/warnabg</item>
        <item name="colorOnBackground">@color/bghome</item>
        <item name="textAppearanceBody1">@color/font</item>
        <item name="textAppearanceBody2">@color/font2</item>
        <item name="menu">@color/menu</item>
        <item name="boxStrokeColor">@color/bgbox</item>
        <item name="colorOnContainer">@color/signin</item>
        <item name="colorOnContainerUnchecked">@color/signup</item>
        <item name="colorButtonNormal">@color/button</item>

    </style>
    <style name="button">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:fontFamily">@font/font</item>
        <item name="android:textColor">@color/button</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="buttonreg">
        <item name="android:background">@drawable/buttonreg</item>
        <item name="android:fontFamily">@font/font</item>
        <item name="android:textColor">@color/button</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Title">
        <item name="android:fontFamily">@font/font</item>
        <item name="android:textColor">@color/font</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/font</item>
        <item name="hintTextColor">@color/font</item>
        <item name="startIconTint">@color/font</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="TextInputEditText" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:background">@drawable/bg_text_field</item>
        <item name="android:fontFamily">@font/font</item>
    </style>

    <style name="SubTitle">
        <item name="android:fontFamily">@font/font</item>
        <item name="android:textColor">@color/font</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.BabyMeter" parent="Base.Theme.BabyMeter" />
</resources>